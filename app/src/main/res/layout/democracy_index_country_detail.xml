<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_country_name">

            <ru.alexander.worldmetrics.view.LabelValueChartView
                android:id="@+id/lvcv_di"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ru.alexander.worldmetrics.view.LabelValueChartView
                android:id="@+id/lvcv_epap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Functioning of government -->
            <ru.alexander.worldmetrics.view.LabelValueChartView
                android:id="@+id/lvcv_fog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Political participation -->
            <ru.alexander.worldmetrics.view.LabelValueChartView
                android:id="@+id/lvcv_pp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Political culture -->
            <ru.alexander.worldmetrics.view.LabelValueChartView
                android:id="@+id/lvcv_pc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Civil liberties -->
            <ru.alexander.worldmetrics.view.LabelValueChartView
                android:id="@+id/lvcv_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Civil liberties" />

            <TextView
                android:id="@+id/tv_di_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>