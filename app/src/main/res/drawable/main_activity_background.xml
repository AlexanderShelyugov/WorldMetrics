<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/colorPrimary"
                android:startColor="@color/colorPrimaryVariant" />
        </shape>
    </item>
    <item
        android:width="400dp"
        android:height="400dp"
        android:start="-100dp"
        android:top="-100dp">
        <rotate
            android:fromDegrees="40"
            android:pivotX="50%"
            android:pivotY="50%"
            android:visible="true">
            <shape>
                <corners android:radius="75dp" />
                <gradient
                    android:angle="270"
                    android:centerX="1"
                    android:centerY="1"
                    android:endColor="@color/colorSecondary"
                    android:gradientRadius="90%"
                    android:startColor="@color/colorSecondaryVariant"
                    android:type="radial" />
            </shape>
        </rotate>
    </item>
</layer-list>