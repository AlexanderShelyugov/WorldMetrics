    android:id="@+id/nav_graph"
    app:startDestination="@id/allIndexesOverviewFragment">

    <fragment
        android:id="@+id/allIndexesOverviewFragment"
        android:name="ru.alexander.worldmetrics.fragment.AllIndexesOverviewFragment"
        android:label="All indexes overview fragment" >
        <action
            android:id="@+id/action_allIndexesOverviewFragment_to_democracyIndexOverviewFragment"
            app:destination="@id/democracyIndexOverviewFragment" />
        <action
            android:id="@+id/action_allIndexesOverviewFragment_to_corruptionPerceptionsOverviewFragment"
            app:destination="@id/corruptionPerceptionsOverviewFragment" />
        <action
            android:id="@+id/action_allIndexesOverviewFragment_to_pressFreedomOverviewFragment"
            app:destination="@id/pressFreedomOverviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/democracyIndexOverviewFragment"
        android:name="ru.alexander.worldmetrics.fragment.DemocracyIndexOverviewFragment"
        android:label="Democracy index overview fragment" />
    <fragment
        android:id="@+id/corruptionPerceptionsOverviewFragment"
        android:name="ru.alexander.worldmetrics.fragment.CorruptionPerceptionsOverviewFragment"
        android:label="Corruption perceptions overview fragment" />
