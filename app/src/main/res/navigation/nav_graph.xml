<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allIndexesOverviewFragment">

    <fragment
        android:id="@+id/allIndexesOverviewFragment"
        android:name="ru.alexander.worldmetrics.fragment.AllIndexesOverviewFragment"
        android:label="All indexes overview fragment">
        <action
            android:id="@+id/action_allIndexesOverviewFragment_to_democracyIndexOverviewFragment"
            app:destination="@id/democracyIndexOverviewFragment"
            app:enterAnim="@anim/screen_enter"
            app:exitAnim="@anim/screen_exit"
            app:popEnterAnim="@anim/screen_enter"
            app:popExitAnim="@anim/screen_exit" />
        <action
            android:id="@+id/action_allIndexesOverviewFragment_to_corruptionPerceptionsOverviewFragment"
            app:destination="@id/corruptionPerceptionsOverviewFragment"
            app:enterAnim="@anim/screen_enter"
            app:exitAnim="@anim/screen_exit"
            app:popEnterAnim="@anim/screen_enter"
            app:popExitAnim="@anim/screen_exit" />
        <action
            android:id="@+id/action_allIndexesOverviewFragment_to_pressFreedomOverviewFragment"
            app:destination="@id/pressFreedomOverviewFragment"
            app:enterAnim="@anim/screen_enter"
            app:exitAnim="@anim/screen_exit"
            app:popEnterAnim="@anim/screen_enter"
            app:popExitAnim="@anim/screen_exit" />
    </fragment>
    <fragment
        android:id="@+id/democracyIndexOverviewFragment"
        android:name="ru.alexander.worldmetrics.fragment.democracy_index.DemocracyIndexCountryListFragment"
        android:label="Democracy index overview fragment">
        <action
            android:id="@+id/action_democracyIndexOverviewFragment_to_democracyIndexCountryDetailFragment"
            app:destination="@id/democracyIndexCountryDetailFragment"
            app:enterAnim="@anim/screen_enter"
            app:exitAnim="@anim/screen_exit"
            app:popEnterAnim="@anim/screen_enter"
            app:popExitAnim="@anim/screen_exit" />
    </fragment>
    <fragment
        android:id="@+id/corruptionPerceptionsOverviewFragment"
        android:name="ru.alexander.worldmetrics.fragment.corruption_perceptions.CorruptionPerceptionsCountryListFragment"
        android:label="Corruption perceptions overview fragment">
        <action
            android:id="@+id/action_corruptionPerceptionsOverviewFragment_to_corruptionPerceptionsCountryDetailFragment"
            app:destination="@id/corruptionPerceptionsCountryDetailFragment"
            app:enterAnim="@anim/screen_enter"
            app:exitAnim="@anim/screen_exit"
            app:popEnterAnim="@anim/screen_enter"
            app:popExitAnim="@anim/screen_exit" />
    </fragment>
    <fragment
        android:id="@+id/pressFreedomOverviewFragment"
        android:name="ru.alexander.worldmetrics.fragment.press_freedom.PressFreedomCountryListFragment"
        android:label="Press freedom overview fragment">
        <action
            android:id="@+id/action_pressFreedomOverviewFragment_to_pressFreedomCountryDetailFragment"
            app:destination="@id/pressFreedomCountryDetailFragment"
            app:enterAnim="@anim/screen_enter"
            app:exitAnim="@anim/screen_exit"
            app:popEnterAnim="@anim/screen_enter"
            app:popExitAnim="@anim/screen_exit" />
    </fragment>
    <fragment
        android:id="@+id/democracyIndexCountryDetailFragment"
        android:name="ru.alexander.worldmetrics.fragment.democracy_index.DemocracyIndexCountryDetailFragment"
        android:label="Democracy Index country detail fragment">
        <argument
            android:name="countryCode"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/corruptionPerceptionsCountryDetailFragment"
        android:name="ru.alexander.worldmetrics.fragment.corruption_perceptions.CorruptionPerceptionsCountryDetailFragment"
        android:label="Corruption perceptions country detail fragment">
        <argument
            android:name="countryCode"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/pressFreedomCountryDetailFragment"
        android:name="ru.alexander.worldmetrics.fragment.press_freedom.PressFreedomCountryDetailFragment"
        android:label="Press freedom country detail fragment">
        <argument
            android:name="countryCode"
            app:argType="string" />
    </fragment>
</navigation>